								{
									"listen": "test",
									"script": {
										"exec": [
											"pm.test(\"Statuscode:200\", function () {",
											"    pm.response.to.have.status(200);",
											"});",
											"",
											"pm.test(\"admin created\", function () {",
											"    const new_admin = pm.response.json();",
											"    pm.expect(new_admin).to.have.property(\"username\");",
											"    pm.expect(new_admin).to.have.property(\"products\");",
											"    pm.expect(new_admin).to.have.property(\"id\");",
											"});"
										],
										"type": "text/javascript",
										"packages": {}
									}
								},
								{
									"listen": "prerequest",
									"script": {
										"exec": [
											"function generateUsername(lenght) {",
											"    const chars = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';",
											"    let username = '';",
											"    for (let i = 0; i < lenght; i++) {",
											"        username += chars.charAt(Math.floor(Math.random() * chars.length))",
											"    }",
											"",
											"    return username;",
											"}",
											"",
											"let username = generateUsername(4);",
											"",
											"pm.environment.set(\"username\", username);"
										],
										"type": "text/javascript",
										"packages": {}
									}
								}
							],
							"request": {
								"method": "POST",
								"header": [],
								"body": {
									"mode": "raw",
									"raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}",
									"options": {
										"raw": {
											"language": "json"
										}
									}
								},
								"url": {
									"raw": "{{backend.env}}/signup\n",
									"host": [
